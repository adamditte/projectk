extends layouts/cover

block content
    h1 Hello. Please enter an address to get info about the location.
    input(id="pac-input", class="controls", type="text", placeholder="Search Box")
    div(id="Result")
    
    div(id="map")
    script(id="SearchResultTemplate", type="text/x-handlebars-template")
        ul
            li Address: {{formattedAddress}}
            li Zip: {{zipcode}}
            li Latitude: {{latitude}}
            li Longitude: {{longitude}}
            li County: {{administrativeLevels.level2long}}
            li Neighborhood: {{extra.neighborhood}}
append scripts
    script(src="/js/geocodeform.js")
    script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBBqoKA5F1E5_MR427Z1kyGwMP5zNGjejQ&libraries=places&callback=initAutocomplete")